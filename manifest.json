{
	"name": "TTCV2",
	"short_name": "TankTroubleClassicV2",
	"author": "kamarov",
	"version": "2024.7.1",
	"manifest_version": 3,
	"description": "Old Tank mayhem is back. Ready to roll in?.",
  
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "1",
				"enabled": true,
				"path": "images/colours/colours.json"
			},
			{
				"id": "2",
				"enabled": true,
				"path": "ttcv2/game/game.json"
			},
			{
				"id": "3",
				"enabled": true,
				"path": "images/accessories/accessories.json"
			},
			{
				"id": "4",
				"enabled": true,
				"path": "ttcv2/tankIcon/tank.json"
			}
		]
	},
  
	"permissions": [
		"declarativeNetRequest",
		"declarativeNetRequestFeedback",
		"declarativeNetRequestWithHostAccess",
		"storage",
		"activeTab"
	],
  
	"host_permissions": [
		"*://*.tanktrouble.com/",
		"*://*.raw.githubusercontent.com/"
	],

	"icons": {
		"16": "icon/icon16.png",
		"32": "icon/icon32.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},

	"content_scripts": [
		{
			"matches": ["*://*.tanktrouble.com/*"],
			"js": ["content.js", "ttcv2/scripts/customScripts.js"], 
			"css": ["ttcv2/css/classicStyle.css"],
			"run_at": "document_idle",
                        "world": "MAIN"
		}
	]
}
