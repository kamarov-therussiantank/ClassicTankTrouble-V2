{
	"name": "TTCV2+",
	"author": "Kamarov",
	"version": "2024.4.30",
	"manifest_version": 3,
	"description": "Adds additional features to TTCV2 extension",
  
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "1",
				"enabled": true,
				"path": "colours/classicColours.json"
			},
			{
				"id": "2",
				"enabled": true,
				"path": "game/classicGame.json"
			}
		]
	},
  
	"permissions": [
		"declarativeNetRequest",
		"declarativeNetRequestFeedback",
		"declarativeNetRequestWithHostAccess",
		"storage",
		"activeTab"
	],
  
	"host_permissions": [
		"*://*.tanktrouble.com/",
		"*://*.raw.githubusercontent.com/"
	],

	"icons": {
		"16": "icon/16.png",
		"32": "icon/32.png",
		"48": "icon/48.png",
		"128": "icon/128.png",
		"256": "icon/256.png"
	}
}
